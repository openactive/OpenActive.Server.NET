@model BookingPartnerModel

<div class="partner container">
    <div class="row page-header">
        <div class="col-sm-10">
            <h1>
                New Booking Partner
            </h1>
        </div>
    </div>
    <form action="/booking-partners/create" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="emailAddress" class="control-label">Email address</label>
            <input type="email" class="form-control" id="emailAddress" name="email">
        </div>
        <div class="form-group">
            <label for="bookingPartnerName" class="control-label">Booking Partner Name</label>
            <input type="text" class="form-control" id="bookingPartnerName" name="bookingPartnerName">
        </div>
        <hr />

        <div class="row">
            <div class="col-sm-8 text-center">

                <button class="btn btn-sm btn-secondary">Create</button>

                <a class="btn btn-sm btn-secondary" href="/booking-partners/sys-admin">Cancel</a>
            </div>
        </div>
    </form>
</div>